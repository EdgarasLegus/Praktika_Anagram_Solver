@model AnagramSolver.Contracts.Entities.WordEntity
@{ ViewData["Title"] = "Update selected word"; }
<h2>Fill form to update selected word in dictionary</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Existing word*</label>
                <input name="existingWord" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Word1" class="control-label">New Word*</label>
                <input asp-for="Word1" class="form-control" />
                <span asp-validation-for="Word1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label">New category*</label>
                <div class="hide">Categories to choose: <br />dll, rom.sk, dkt, tikr.dkt2, įst, įv, tikr.dkt, sktv, išt, sutr, prl, būdn, vksm, prv, bdv, jng, akronim</div>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="button" id="button-3">Update</button>
            </div>

            <div class="form-group">
                <p>* - required</p>
            </div>

            <p style="color:red">@ViewBag.Message</p>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-default active">&#8629 Go back</a>

<style>
    .btn-default {
        border-color: cornflowerblue
    }

    .button {
        display: inline-flex;
        height: 40px;
        width: 150px;
        border: 2px solid #DF9924;
        margin: 20px 20px 20px 0px;
        color: #DF9924;
        text-transform: uppercase;
        text-decoration: none;
        font-size: .8em;
        letter-spacing: 1.5px;
        align-items: center;
        justify-content: center;
    }

    value {
        color: #DF9924;
        text-decoration: none;
        letter-spacing: 1px;
    }

    #button-3 {
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

        #button-3:hover {
            color: #2D3142;
            background: #DF9924;
        }

    .hide {
        display: none;
    }

    .control-label:hover + .hide {
        display: block;
        font-style: italic;
        color: darkgreen;
    }
</style>
